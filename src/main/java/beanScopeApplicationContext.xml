<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	
    <!-- Define your beans here -->
    
    <!-- Logger bean has to be defined first -->
    <bean id="myLoggerConfig" class="com.example.springdemo.MyLoggerConfig" init-method="initLogger">
    	<property name="rootLoggerLevel" value="FINE" />
    	<property name="printedLoggerLevel" value="FINE"/>
    </bean>
    
    <!-- define the dependency -->
   <bean id="myFortuneService"
    		class="com.example.springdemo.HappyFortuneService">
    </bean>
    
    
 	<bean id="myCoach"
 		class="com.example.springdemo.TrackCoach"
 		scope="prototype">	
 		<constructor-arg ref="myFortuneService" /> 	
 	</bean>
    

</beans>





